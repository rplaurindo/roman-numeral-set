# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{ts}]
quote_type = single

[*.{ts,md}]
indent_size = 4

[*.{js,json,html,styl}]
indent_size = 2

[*.{md,html}]
max_line_length = off
trim_trailing_whitespace = false
