{
  // to build, run: $ tsc -p <path of the tsconfig.json file>
  "compilerOptions": {
    // genereted by $ tsc init
    "esModuleInterop": true,
    // genereted by $ tsc init
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./",
    // genereted by $ tsc init
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2015"
  },
  "include": [
    "./src",
    "package.json"
  ]
}
