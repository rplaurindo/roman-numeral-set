{
  // to build, run: $ tsc --build <path of the tsconfig.json file>
  "compilerOptions": {
    // genereted by $ tsc init
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2015",

    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./",
    "sourceMap": true
  },
  "include": [
    "./src"
  ],
  "files": [
    "package.json",
    "index.ts"
  ]
}
