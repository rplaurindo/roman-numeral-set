{
  // to build, run: $ tsc -p <path of the tsconfig.json file>
  "compilerOptions": {
    // genereted by $ tsc init
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2015",

    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./",
    "sourceMap": true
  },
  "include": [
    "./src",
    "package.json"
  ]
}
